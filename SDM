##Create data frames from presence/absence
butternut_p <- data.frame(butternut_pa[butternut_pa$PA == 1,][,1:2])
butternut_a <- data.frame(butternut_pa[butternut_pa$PA == 0,][,1:2])

##Now convert to spatial points 
coordinates(butternut_p) <- c('Longitude', 'Latitude')
proj4string(butternut_p) <- CRS("+proj=aea +lat_1=20 +lat_2=60 +lat_0=40 +lon_0=-96 +x_0=0 +y_0=0 +datum=NAD83 +units=m +no_defs")

##Absence spatial points 
coordinates(butternut_a) <- c('Longitude', 'Latitude')
proj4string(butternut_a) <- CRS("+proj=aea +lat_1=20 +lat_2=60 +lat_0=40 +lon_0=-96 +x_0=0 +y_0=0 +datum=NAD83 +units=m +no_defs")

